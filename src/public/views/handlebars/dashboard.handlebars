<div class="container-item">
    <div id="title">
        <h1>Bienvenido {{user.username}}</h1>
        <div id="logoutBtn" onclick="location.href = '/auth/logout'">Cerrar Sesi√≥n</div>
    </div>
    <h1 id="titulo">Vista de Productos</h1>


    {{#if products.length}}
    <table>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
            {{#each products}}
        </tr>

        <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td><img src="/uploads/{{thumbnail}}" class="foto" /></td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <h2> No hay productos por mostrar </h2>
    {{/if}}
</div>

