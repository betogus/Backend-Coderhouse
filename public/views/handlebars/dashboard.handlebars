<div class="container">
    <div id="title">
        <h1>Bienvenido {{user.username}}</h1>
    </div>
    <h1 id="titulo">Vista de Productos</h1>

    <div id="products-container">
    {{#if products.length}}
        {{#each products}}
            <div class="item-container" id="{{id}}">
                <p class="item-name">{{name}}</p>
                <p class="item-precioKg">{{precioKg}}</p>
            </div>
        {{/each}}
    {{else}}
    <h2> No hay productos por mostrar </h2>
    {{/if}}
    </div>
</div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script type="module" src="../../dashboard.js"></script>
<style>
    #title {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
    }

    .item-container {
        background-color: #1f1e1e;
        color: #ffffff;
        width: 400px;
        margin: 10px;
        border-radius: 2rem;
        padding: 20px;
        cursor: pointer;
    }
    .item-name {
        font-size: large;
        margin: 0;
    }

    .item-precioKg {
        font-size: medium;
        margin: 0;
        color: #656565;
    }
    h1 {
        color: #ffffff;
    }


    .container{
        padding-top: 100px;
        background-color: rgb(32, 32, 60);
        border-radius: 2rem;
        width: 80%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .foto {
        object-fit: contain;
        max-width: 30px;
    }

    #button,
    #logoutBtn {
        background-color: rgb(101, 65, 245);
        padding: 0px 10px;
        width: 100px;
        height: 30px;
        border-radius: 0.5rem;
        margin: 5px;
        display: flex;
        justify-content: center;
