<div class="container">
    <h1 id="titulo">Órdenes</h1>
    <div id="order-container">
        {{#if orders.length}}
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            {{#each orders}}
            {{#each this.products}}
            <tr>
                <td>{{name}}</td>
                <td>{{price}}</td>
                <td>{{../timestamp}}</td>
            </tr>
            {{/each}}
            {{/each}}
        </table>
        {{else}}
        <h3>No hay órdenes</h3>
        {{/if}}
    </div>
</div>
    <style>
        #title {
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            width: 100%;
        }

        .product-item {
            background-color: #1f1e1e;
            color: #ffffff;
            width: 400px;
            margin: 10px;
            border-radius: 2rem;
            padding: 20px;
            cursor: pointer;
        }


        h1,
        h3 {
            color: #ffffff;
        }


        .container {
            padding-top: 100px;
            background-color: rgb(32, 32, 60);
            border-radius: 2rem;
            width: 80%;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-bottom: 30px;
        }

        .table {
            background-color: #1f1e1e;
            color: #ffffff;
            width: 400px;
            padding: 10px;
            text-align: center;
    </style>
